import streamlit as st;
import requests;

def bootstrap_frontend(token: str) {
    st.set_page_config(
        page_title="Task Manager Lite - AI Assistant", page_icon="ğŸ“‹", layout="wide"
    );

    st.title("ğŸ“‹ Task Manager Lite - AI Assistant");
    st.markdown("âœ¨ Intelligent task management, email writing, and general chat");

    # Initialize session state
    if "task_results" not in st.session_state {
        st.session_state.task_results = [];
    }
    if "loading" not in st.session_state {
        st.session_state.loading = False;
    }

    # Main interface
    st.markdown("### ğŸ’­ What can I help you with today?");

    # Examples
    with st.expander("ğŸ’« Example Requests") {
        st.markdown("**ğŸ“‹ Task Management**");
        if st.button("â• Add a task") {
            st.session_state.user_input = "Add a task to buy groceries tomorrow at 3 PM";
        }
        if st.button("ğŸ“ Summarize tasks") {
            st.session_state.user_input = "Summarize all my tasks";
        }
        st.markdown("**ğŸ“§ Email Writing**");
        if st.button("âœ‰ï¸ Write a meeting email") {
            st.session_state.user_input = "Write an email to schedule a meeting with my team for next Friday";
        }
        if st.button("ğŸ“¬ Write follow-up email") {
            st.session_state.user_input = "Write a follow-up email for the project update";
        }
        st.markdown("**ğŸ’¬ General Chat**");
        if st.button("ğŸ¤” Ask a question") {
            st.session_state.user_input = "What are the best practices for time management?";
        }
        if st.button("ğŸŒŸ Get advice") {
            st.session_state.user_input = "How can I be more productive at work?";
        }
    }

    # Text input
    user_input = st.text_area(
        "ğŸ’¬ Enter your request:",
        value=st.session_state.get("user_input", ""),
        height=100,
        placeholder="e.g., Add a task to review the presentation by 5 PM tomorrow ğŸ“Š"
    );

    # Process button
    if st.button("ğŸš€ Process Request") {
        if user_input.strip() {
            st.session_state.loading = True;
            st.rerun();
        } else {
            st.warning("âš ï¸ Please enter a request!");
        }
    }

    # Show loading state
    if st.session_state.loading {
        with st.spinner("ğŸ§  AI is processing your request...") {
            try {
                response = requests.post(
                    "http://localhost:8000/walker/task_manager",
                    json={"utterance": user_input},
                    headers={"Authorization": f"Bearer {token}"}
                );

                if response.status_code == 200 {
                    result = response.json();
                    task_result = result.get("reports", [{}])[0];
                    # Add to results history
                    st.session_state.task_results.insert(0, task_result);
                    # Keep only last 10 results
                    if len(st.session_state.task_results) > 10 {
                        st.session_state.task_results = st.session_state.task_results[:10];
                    }
                    st.session_state.loading = False;
                    st.success("âœ… Request processed successfully!");
                    st.rerun();
                } else {
                    st.error(f"âŒ Processing failed: {response.text}");
                    st.session_state.loading = False;
                }
            } except requests.exceptions.Timeout {
                st.error("â° Request timed out. Please try again.");
                st.session_state.loading = False;
            } except Exception as e {
                st.error(f"âŒ Error: {str(e)}");
                st.session_state.loading = False;
            }
        }
    }

    # Display results
    if st.session_state.task_results {
        st.markdown("---");
        st.markdown("## ğŸ“Š Recent Activity");
        i = 0;
        for result in st.session_state.task_results {
            # Determine node type icon and color
            node_type = result.get("node_type", "Unknown");
            routed_to = result.get("routed_to", "");

            if node_type == "TaskHandling" {
                icon = "ğŸ“‹";
                color = "blue";
            } elif node_type == "EmailHandling" {
                icon = "ğŸ“§";
                color = "green";
            } elif node_type == "GeneralChat" {
                icon = "ğŸ’¬";
                color = "orange";
            } else {
                icon = "ğŸ¤–";
                color = "gray";
            }

            with st.expander(f"{icon} {node_type} - Request {i + 1}") {
                # Request details
                st.markdown(f"**ğŸ”€ Routed to:** `{routed_to}`");
                # User input
                st.markdown("**ğŸ‘¤ Your Request:**");
                st.info(result.get("utterance", "No input recorded"));
                # AI response
                st.markdown("**ğŸ¤– AI Response:**");
                response_text = result.get("response", "No response recorded");
                if response_text {
                    if node_type == "TaskHandling" {
                        st.success(response_text);
                    } elif node_type == "EmailHandling" {
                        st.success(response_text);
                    } else {
                        st.info(response_text);
                    }
                } else {
                    st.warning("No response available");
                }
                # Copy response button
                if st.button(f"ğŸ“‹ Copy Response {i + 1}") {
                    st.write(
                        "ğŸ“‹ Response copied to clipboard! (Use Ctrl+C to copy manually)"
                    );
                }
            }
            i += 1;
        }
        # Clear history button
        if st.button("ğŸ—‘ï¸ Clear History") {
            st.session_state.task_results = [];
            st.session_state.user_input = "";
            st.rerun();
        }
    }

    # Footer
    st.markdown("---");
    st.markdown("**ğŸ¤– Powered by Task Manager Lite AI Assistant**");
    st.markdown(
        "âœ¨ Features: ğŸ“‹ Task management â€¢ ğŸ“§ Email writing â€¢ ğŸ’¬ Smart chat â€¢ ğŸ”€ Intelligent routing"
    );
}

with entry {
    INSTANCE_URL = "http://localhost:8000";
    TEST_USER_EMAIL = "test@mail.com";
    TEST_USER_PASSWORD = "password";

    response = requests.post(
        f"{INSTANCE_URL}/user/login",
        json={"email": TEST_USER_EMAIL, "password": TEST_USER_PASSWORD}
    );

    if response.status_code != 200 {
        # Try registering the user if login fails
        response = requests.post(
            f"{INSTANCE_URL}/user/register",
            json={"email": TEST_USER_EMAIL, "password": TEST_USER_PASSWORD}
        );
        assert response.status_code == 201;
        response = requests.post(
            f"{INSTANCE_URL}/user/login",
            json={"email": TEST_USER_EMAIL, "password": TEST_USER_PASSWORD}
        );
        assert response.status_code == 200;
    }

    token = response.json()["token"];

    bootstrap_frontend(token);
}
