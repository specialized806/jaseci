"""Client UI components module for testing cl imports."""

cl import from jac:client_runtime { createState, navigate, }

cl {
    # Shared state
    glob _uiState = createState({"theme": "light"});
    glob uiState = _uiState[0];
    glob setUiState = _uiState[1];

    # UI Component
    def Button(label: str) -> any {
        return <button
            onclick={handleClick}
        >
            {label}
        </button>;
    }

    def handleClick()  -> None {
        navigate("/clicked");
    }

    # Another component
    def Card(title: str) -> any {
        return <div class="card">
            <h2>
                {title}
            </h2>
            <p>
                Current theme: {uiState["theme"]}
            </p>
        </div>;
    }
}
